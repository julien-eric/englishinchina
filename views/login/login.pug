extends image-splash
block card
    .card.text-dark.my-5
        .card-header.border-bottom-0
                .text-center
                    img(src='/images/logo.svg', width='', height='40', alt='')
        .card-body.text-left
                .text-center
                        h1.mt-3.mb-5.text-light.font-weight-bold Sign in 
                        if message.length > 0
                                p.rounded.bg-light.text-danger.py-1.mb-5 #{message}
                form(class='form-signin', action='/login', method='POST')
                        if(redirecturl)
                                .form-group.hidden
                                        input.form-control.form-control-lg(type='text', name='redirecturl', placeholder='Username', value=redirecturl)
                        .md-form.mb-5
                                i.fa.prefix.mdi.mdi-email(aria-hidden='true')
                                input.form-control(type='text', name='email', placeholder='Email',required, autofocus)
                                label(for='email') Email
                        .md-form
                                i.fa.prefix.mdi.mdi-lock(aria-hidden='true')
                                input.form-control(type='password', name='password', placeholder='Password', required)
                                label.control-label(for='password') Password
                        p.text-primary.text-right.forgot-password
                                a(href="/forgot" style="font-size: 0.9rem;") Forgot 
                                        span.font-weight-bold( style="font-size: 0.85rem;") Password?
                        .text-center
                                button.btn.btn-primary.btn-lg.px-5.px-5.mb-1(type='submit') Login
                        p.text-center( style="font-size: 0.8rem;")
                                |Don't have an account yet?&nbsp;
                                a(href="/signup") Sign up

        .card-footer.border-0.bg-dark.text-light
                include social-login



