extends form-container
block card
        .border.border-pale-gray.border-radius-5.text-dark.my-5
                .my-5.text-left.px-3.px-md-5.py-1
                        .text-center
                                h3.mt-1.mb-5.text-light.font-weight-bold Sign in 
                                if message.length > 0
                                        p.rounded.bg-light.text-danger.py-1.mb-5 #{message}
                        form(class='form-signin', action='/login', method='POST')
                                if(redirecturl)
                                        .form-group.hidden
                                                input.form-control.form-control-lg(type='text', name='redirecturl', placeholder='Username', value=redirecturl)
                                .md-form.mb-5
                                        //- i.fa.prefix.mdi.mdi-email(aria-hidden='true')
                                        input.form-control(type='text', name='email', placeholder='Email',required, autofocus)
                                        label(for='email') Email
                                .md-form.form-group.mb-5
                                        //- i.fa.prefix.mdi.mdi-lock(aria-hidden='true')
                                        input.form-control.mb-0(type='password', name='password', placeholder='Password', required)
                                        label.control-label(for='password') Password
                                        p.text-primary.text-small.forgot-password
                                                a(href="/forgot") Forgot your 
                                                        span.font-weight-bold password?
                                .text-center
                                        button.btn.btn-md.btn-block.btn-primary.btn-lg.px-5.px-5.mb-1(type='submit') Login
                                p.mb-0( style="font-size: 0.8rem;")
                                        |Don't have an account yet?&nbsp;
                                        a(href="/signup") Sign up

                .footer.border-0.bg-light.text-dark.py-3
                        include social-login
        
        p.text-small.text-center.mb-5 Second Language World catalogs every school, university and English organization in the World. Discover schools and cities through the words of teachers who have already experienced them and find which environment better fulfills your expectations




