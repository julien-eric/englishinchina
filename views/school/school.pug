extends ../layout
block content
      -var reviews = school.reviews
      -var averageRating = jadefunctions.roundToPoint5(school.averageRating)
      
      .school-page.mb-5

            include schoolheader
            include school-tabs
            include ../review/splash-review
            
            .container.bg-white.pt-3           
                  .row
                        #description.description.col-sm-12.col-lg-8
                              -var element = school;
                              include description
                              //- if(relatedSchools)
                              //-    .page-block.col-xs-12.col-sm-12.col-md-12.col-lg-4.visible-lg
                              //-       -var relatedschools = relatedschools
                              //-       include relatedschools
                              //- include schooladminsection
                        .col-lg-4
                              include ../ratingcard
                              -var query = '?schoolId=' +  school._id;
                              a.btn.btn-lg.btn-block.btn-primary.mb-2(href='/review' + query)
                                    i.mdi.mdi-plus-circle(aria-hidden='true')
                                    span  Write a Review
                              a.btn.btn-lg.btn-block.btn-primary(href="/school/addphoto/" + school._id)
                                    i.mdi.mdi-plus-circle(aria-hidden='true')
                                    span  Add a Picture
                              include ../utils/share-box

                  #photos.photos.mt-5.clearfix
                        h1.display-4#popular-cities.text-center.font-weight-bold.text 
                              //- i.mdi.mdi-image(aria-hidden='true')
                              | Photos
                        p.text-center.text-muted What others have been saying about #{school.name}
                        hr
                        -var photos = school.photos
                        -var link = "/school/addphoto/" + school.id
                        include ../photogrid

                  if school.averageRating != -1
                        #rating.ratings.mt-5.clearfix
                              h1.display-4#popular-cities.text-center.font-weight-bold.text 
                                    //- i.mdi.mdi-message-text.display-7.text-muted(aria-hidden='true')
                                    |  Rating 
                              p.text-center.text-muted Distribution and breakdown of the reviews for #{school.name}
                              hr
                              include schoolbreakdown

                  #reviews.reviews.mt-5.clearfix
                        h1.display-4#popular-cities.text-center.font-weight-bold.text 
                              //- i.mdi.mdi-message-text.display-7.text-muted(aria-hidden='true')
                              |  Reviews 
                        p.text-center.text-muted What others have been saying about #{school.name}. #{reviewsCount} Reviews
                        hr
                        include ../review/reviews

