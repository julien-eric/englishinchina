.card.text-center.h-100
      .display-grid
            a.view.overlay.card-img(href='/school/id/'+ school._id)

                  //- img.card-img-top(src='#{pictureInfo.returnThumbnail(school.pictureUrl)}', alt='Card image')
                  .image-container(style='background-image: url(' + pictureInfo.returnThumbnail(school.pictureUrl) + ');')
            a.btn.btn-primary.btn-rounded.btn-floating.btn-action.ml-auto.mr-4(href='/school/id/'+ school._id)
                  i.text-white.mdi.mdi-chevron-double-right(aria-hidden='true')
            .card-body
                  //- .row
                  //-       ul.list-group.list-group-flush
                  //-             li.list-group-item
                  //-                   include school/locationbreadcrumb
                  h3.font-weight-light.card-title.px-0 
                        a.text-dark(href='/school/id/'+ school._id)
                              | #{school.name}
                  h6.card-subtitle.font-weight-light.mb-2.text-muted #{jadefunctions.returnNameforSchoolType(school.schoolType)}
                        if(school.company)
                              span &nbsp;|&nbsp;
                                    a(href='/company/id/' + school.company.id) #{school.company.name}
                        //- if school.averageRating > 0
                        //-       span &nbsp;|&nbsp;
                        //-             include genrating
                  p.card-text #{school.description}
                  -var avg = jadefunctions.roundToPoint5(school.averageRating)
                  if school.reviews || avg != '-1.0'
                        .row.justify-content-center.text-muted
                              if avg != '-1.0'
                                    .col-4
                                          include ../genratingshort
                              if school.reviews
                                    .col-4
                                          i.mdi.mdi-message-text(aria-hidden='true')      
                                          |  #{school.reviews.length}
