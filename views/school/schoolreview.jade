block content
   .col-sm-12.col-md-12.col-lg-12.review-wrapper
      li.single-review(id="#{review._id}")
         .user-picture
               if review.user.fb && review.user.useFacebookPic
                  .default-user-picture.image-holder.img-circle.fcb(style="background-image: url('/images/default-user.png');")
                  .profile-img.image-holder.img-circle.fcb(style="background-image: url('#{pictureInfo.returnFacebookPicture(review.user.avatarUrl)}');")
               else
                  .default-user-picture.image-holder.img-circle.th(style="background-image: url('/images/default-user.png');")
                  .profile-img.image-holder.img-circle.th(style="background-image: url('#{pictureInfo.returnThumbnail(review.user.avatarUrl)}');")
         .user-information
            if review.user
               if review.user.firstName && review.user.lastName
                  a.name(href="/user/#{review.user._id}") #{review.user.firstName} #{review.user.lastName}
               else
                  a.name(href="/user/#{review.user._id}") #{review.user.username}
            if Date.parse(review.dateEmployed) != 0 && Date.parse(review.dateReleased) != 0
               .school-name Worked at #{review.foreignId.name}
               .date #{moment(review.dateEmployed).format("MMM YYYY") + " to " + moment(review.dateReleased).format("MMM YYYY")}
            //Somewhat confusing because other case doesnt have a label like worked: (no space for that at this point)
            //else
            //   .date Posted on #{moment(review.dateCreated).format("MMMM Do YYYY")}
            if review.average_rating
            .rating(data-rate-value="#{jadefunctions.roundToPoint5(review.average_rating)}")
         span.clearfix
         h3 Comment
         hr
         .review-description !{review.comment}
         h3 Breakdown
         hr
         include schoolbreakdown
         hr
         include ../helpful




         a.btn.btn-eic.btn-primary.btn-lg.hidden(href="/school/reviews/#{review._id}") View Review
      .clearfix


