.img-responsive.school-image-container(style="background-image: url('#{pictureInfo.returnLarge(school.pictureUrl)}');")
    .container.darkbg
        h1.school-page-name #{school.name}
        #schoolid.hidden(value="#{school.id}")
        h3.school-page-schooltype #{jadefunctions.returnNameforSchoolType(school.schoolType)}
            if(school.company)
                |&nbsp;|&nbsp;
                a(href="/company/id/#{school.company.id}") #{school.company.name}
        if school.website
            h4
                a(href="#{school.website}")
                    span.school-glyphicon.glyphicon.glyphicon-home
                    | #{school.website}
        if school.address
            h4
                span.school-glyphicon.glyphicon.glyphicon-map-marker
                | #{school.address}
        if school.phone
            h4
                span.school-glyphicon.glyphicon.glyphicon-earphone
                | #{school.phone}
        .school-location
            if school.province && school.city
                a.btn.btn-lg.btn-primary.btn-gray(href="/school/search?schoolInfo=&province=#{school.province.code}&city=-1") China
                span
                a.btn.btn-lg.btn-primary.btn-gray(href="/school/search?schoolInfo=&province=#{school.province.code}&city=-1") #{school.province.name}
                span
                if school.city
                    a.btn.btn-lg.btn-primary.btn-gray(href="/school/search?schoolInfo=&province=-1&city=#{school.city.code}") #{jadefunctions.capitalize(school.city.pinyinName)}
                else
                    a.btn.btn-lg.btn-primary.btn-gray(href="/school/search?schoolInfo=&province=-1&city=1") Dongying