-var salaryLowerInitial = 5000
if responseInfo && responseInfo.jobDetails && responseInfo.jobDetails.salaryLower
    -salaryLowerInitial = responseInfo.jobDetails.salaryLower

-var salaryHigherInitial = 15000
if responseInfo && responseInfo.jobDetails && responseInfo.jobDetails.salaryHigher
    -salaryHigherInitial = responseInfo.jobDetails.salaryHigher

.row
    .col-lg-12
        label.col-12.px-0 Monthly Salary in RMB (å…ƒ)
        .row.justify-content-center
            fieldset#salaryRange.nouirange.col-11
                input.min(type='range', name='distmin', min='5000', max='25000', step='1000', value=salaryLowerInitial)
                input.max(type='range', name='distmax', min='5000', max='25000', step='1000', value=salaryHigherInitial)
