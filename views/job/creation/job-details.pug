h3.mt-5.py-3.text-dark.font-weight-bold Job Details

include salary-range-input-horiz

.row.mt-3
    .col-lg-6.form-group
        -var datepicker = {}
        -datepicker.id = 'start-date'
        -datepicker.name = 'startDate'
        -datepicker.formName = formName
        -datepicker.class = formName
        -datepicker.placeholder = 'Please Select'
        -datepicker.label = 'Start Date of Contract'
        -numberInput.responseSubProperty = 'contractDetails'
        -datepicker.errorMessage = 'Please select a date'
        -datepicker.required = true
        if responseInfo && responseInfo.contractDetails && responseInfo.contractDetails.startDate
            -datepicker.value = responseInfo.contractDetails.startDate
        include ../../templates/inputs/date-field

    .col-lg-6.form-group
        -var numberInput = {}
        -numberInput.id = 'duration'
        -numberInput.label = 'Length of Contract'
        -numberInput.formName = formName
        -numberInput.class = formName
        -numberInput.placeholder = 'Enter a number'
        -numberInput.responseSubProperty = 'contractDetails'
        -numberInput.name = 'duration'
        -numberInput.min = 0
        -numberInput.max = 6
        -numberInput.errorMessage = 'Please enter a number between ' + numberInput.min + ' and ' + numberInput.max
        -numberInput.tooltip = 'Duration of contract in years'
        -numberInput.required = true
        include ../../templates/inputs/generic-number-input 

