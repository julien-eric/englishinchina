.card.text-right.h-100
    .display-grid
        a.view.overlay.card-img(href='/job/' + job.url)
            .image-container(style='background-image: url(' + pictureInfo.returnLarge(job.pictureUrl) + ');')           
        //- a.btn.btn-primary.btn-rounded.btn-floating.btn-action.ml-auto.mr-4(href='/blog/' + article.slug)
        //-     i.text-white.mdi.mdi-chevron-double-right(aria-hidden='true')
        .card-body.text-left
            h4.font-weight-bold.card-title.px-0 
                a.text-dark.text-capitalize(href="/job/" + job.url)
                    | #{jadefunctions.formatString(job.title, 55)}
            //- h6.card-subtitle.font-weight-light.mb-2.text-muted.text-capitalize #{jadefunctions.formatString(job.kicker, 85)}
            p.text-capitalize.text-small.font-weight-bold #{job.city.pinyinName} - #{job.province.name} &middot; #{moment(job.dateCreated).format("MMMM Do")}
            hr
            p.text-small !{job.description}
