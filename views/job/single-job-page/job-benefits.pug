.card.border-0.mb-3

    -var section = {label:'Benefits', collapsible: 'job-benefits-collapse'}
    include job-section-details

    #job-benefits-collapse.collapse(aria-labelledby='headingOne', data-parent='#accordion')
        if job && job.benefits
            .row.pt-3
                .col-12.mb-5

                    .row
                        .col-5
                            p.mb-0.font-weight-bold         
                                i.text-primary.mdi.mdi-home.mr-2(aria-hidden='true')
                                | Accomodation
                        .col-7
                            p.mb-0 #{job.benefits.accomodation}

                    hr.my-2

                    .row
                        .col-5
                            p.mb-0.font-weight-bold         
                                i.text-primary.mdi.mdi-airplane.mr-2(aria-hidden='true')
                                | Airfare
                        .col-7
                            p.mb-0 #{job.benefits.airfare}

                    hr.my-2

                    .row
                        .col-5
                            p.mb-0.font-weight-bold         
                                i.text-primary.mdi.mdi-account-check.mr-2(aria-hidden='true')
                                | Assistant
                        .col-7
                            p.mb-0 #{job.benefits.teachingAssistant}

                    hr.my-2

                    .row
                        .col-5
                            p.mb-0.font-weight-bold 
                                i.text-primary.mdi.mdi-beach.mr-2(aria-hidden='true')
                                | Vacation Days
                        .col-7
                            p.mb-0 #{job.benefits.vacationDays}

