.card.border-0.mb-3

    -var section = {label:'Teaching Details', collapsible: 'job-teaching-details-collapse'}
    include job-section-details

    #job-teaching-details-collapse.collapse(aria-labelledby='headingOne', data-parent='#accordion')
        if job && job.teachingDetails
            .row.pt-3
                .col-12.mb-5

                    .row
                        .col-5
                            p.mb-0.font-weight-bold         
                                i.text-primary.mdi.mdi-school.mr-2(aria-hidden='true')
                                | Institution
                        .col-7
                            p.mb-0 #{job.teachingDetails.institution}

                    hr.my-2

                    .row
                        .col-5
                            p.mb-0.font-weight-bold         
                                i.text-primary.mdi.mdi-briefcase.mr-2(aria-hidden='true')
                                | Weekly workload
                        .col-7
                            p.mb-0 #{job.teachingDetails.weeklyLoad}

                    hr.my-2

                    .row
                        .col-5
                            p.mb-0.font-weight-bold         
                                i.text-primary.mdi.mdi-account-multiple.mr-2(aria-hidden='true')
                                | Class Size
                        .col-7
                            p.mb-0 #{job.teachingDetails.classSize}

                    hr.my-2

                    .row
                        .col-5
                            p.mb-0.font-weight-bold 
                                i.text-primary.mdi.mdi-account-box.mr-2(aria-hidden='true')
                                | Student Age Group
                        .col-7
                            p.mb-0 #{job.teachingDetails.ageGroup}

