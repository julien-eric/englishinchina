.row
    .col-auto
        a.collapse-link(data-toggle='collapse', href='#job-teaching-details-collapse', role='button', aria-expanded='false', aria-controls='job-teaching-details-collapse')
            h4.text-uppercase.font-weight-bold.text-dark Teaching Details      
    .col.text-right
        h1
            i#job-teaching-details-collapse-chevron.mdi.mdi-chevron-down(aria-hidden='true') 
hr.mt-0
if job && job.teachingDetails
    .row.collapse#job-teaching-details-collapse
        .col-12.mb-5

            .row
                .col-5
                    p.mb-0         
                        i.text-lightgreen.mdi.mdi-school.mr-2(aria-hidden='true')
                        | Institution
                .col-7
                    p.mb-0 #{job.teachingDetails.institution}

            hr.my-2

            .row
                .col-5
                    p.mb-0         
                        i.text-lightgreen.mdi.mdi-briefcase.mr-2(aria-hidden='true')
                        | Weekly workload
                .col-7
                    p.mb-0 #{job.teachingDetails.weeklyLoad}

            hr.my-2

            .row
                .col-5
                    p.mb-0         
                        i.text-lightgreen.mdi.mdi-account-multiple.mr-2(aria-hidden='true')
                        | Class Size
                .col-7
                    p.mb-0 #{job.teachingDetails.classSize}

            hr.my-2

            .row
                .col-5
                    p.mb-0 
                        i.text-lightgreen.mdi.mdi-account-box.mr-2(aria-hidden='true')
                        | Student Age Group
                .col-7
                    p.mb-0 #{job.teachingDetails.ageGroup}