.card.border-0.mb-3

    -var section = {label:'Job Details', collapsible: 'job-details-collapse'}
    include job-section-details

    #job-details-collapse.collapse.show(aria-labelledby='headingOne', data-parent='#accordion')
        if job && job.contractDetails
            .row.pt-3
                .col-12.mb-5
                    if(job.school)
                        a.mb-2(href='/school/' + job.school._id)  
                            i.text-primary.mdi.mdi-school.mr-2(aria-hidden='true')
                            | #{job.school.name}
                        hr.my-2
                    .row
                        .col-5
                            p.mb-0.font-weight-bold         
                                i.text-primary.mdi.mdi-map-marker.mr-2(aria-hidden='true')
                                | Location
                        .col-7
                            p.mb-0 #{job.province.name} - #{jadefunctions.capitalize(job.city.pinyinName)}

                    hr.my-2

                    .row
                        .col-5
                            p.mb-0.font-weight-bold         
                                i.text-primary.mdi.mdi-calendar.mr-2(aria-hidden='true')
                                | Start Date
                        .col-7
                            p.mb-0 #{moment(job.contractDetails.startDate).format("MMMM Do YYYY")}

                    hr.my-2

                    .row
                        .col-5
                            p.mb-0.font-weight-bold         
                                i.text-primary.mdi.mdi-currency-jpy.mr-2(aria-hidden='true')
                                | Salary
                        .col-7
                            p.mb-0 #{job.contractDetails.salaryLower} - #{job.contractDetails.salaryHigher}  CNY/Month
                    
                    hr.my-2
                    
                    .row
                        .col-5
                            p.mb-0.font-weight-bold 
                                i.text-primary.mdi.mdi-email.mr-2(aria-hidden='true')
                                | Contact
                        .col-7
                            a.mb-0(href='mailto:' + job.email) #{job.email}

