block content
   span.clearfix
   h2 Reviews
   hr
   each review in reviews
      li.list-group-review.col-sm-10.col-md-3.col-lg-3(id="#{review._id}")
         .user-picture
            if review.user.fb
               .default-user-picture.image-holder.img-circle(style="background-image: url('/images/default-user.png');")
               .profile-img.image-holder.img-circle(style="background-image: url('#{pictureInfo.returnFacebookPicture(review.user.avatarUrl)}');")
            else
               .default-user-picture.image-holder.img-circle(style="background-image: url('/images/default-user.png');")
               .profile-img.image-holder.img-circle(style="background-image: url('#{pictureInfo.returnThumbnail(review.user.avatarUrl)}');")
         .user-information
            if review.user
               if review.user.firstName && review.user.lastName
                  a.name(href="/user/#{review.user._id}") #{review.user.firstName} #{review.user.lastName}
               else
                  a.name(href="/user/#{review.user._id}") #{review.user.username}
               .date #{review.dateCreated.getDate()}/#{review.dateCreated.getUTCMonth()+1}/#{review.dateCreated.getUTCFullYear()}
         span.clearfix
         if review.average_rating
            .rating(data-rate-value="#{jadefunctions.roundToPoint5(review.average_rating)}")
         .review-content !{review.comment}
         h5
            span.glyphicon.glyphicon-resize-full
            a.readmore(href="##{review._id}") Read More
   #lightbox
      p Click to close
      #lightboxcontent


