   each review in reviews
      li.list-group-review.col-sm-10.col-md-4.col-lg-4
         .image-holder
            img.user-avatar(src="#{review.user.avatarUrl}")
         .user-information
            if review.user
               .name #{review.user.firstName} #{review.user.lastName}
               .date #{review.dateCreated.getDate()}/#{review.dateCreated.getUTCMonth()+1}/#{review.dateCreated.getUTCFullYear()}
         span.clearfix
         if review.average_rating
            .rating(data-rate-value="#{roundToPoint5(review.average_rating)}")
         div #{review.comment}
         h5
            a(href="#") Read More

