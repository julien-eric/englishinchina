#school-header
    #jumbotron-background.jumbotron-fluid.jumbotron-school(style='background-image: url(' + pictureInfo.returnLarge(company.pictureUrl) + ');')  
    #jumbotron-content.text-center.container-fluid
        .row.transparent-black.mb-5
            .container
                include company-map-breadcrumb 

        h1.text-white.text-shadow-dark.font-weight-bold.display-3 #{company.name}

        .row.my-3.justify-content-center
            .col-lg-6
                .row.justify-content-center
                    .chip.chip-md
                        i.mdi.mdi-school(aria-hidden='true') 
                        |  #{company.schools.length} Schools
                    if company.reviews && company.reviews.length > 0
                        .chip.chip-md
                            i.mdi.mdi-message-text(aria-hidden='true')      
                            |  #{company.reviews.length} Reviews
                    -var avg = jadefunctions.roundToPoint5(jadefunctions.returnAverage(company.schools, 'averageRating'))
                    if avg != 'NaN'
                        .chip.chip-md
                            include ../genratingshort

        if company.website
            a.btn.btn-lg.btn-primary(href="//"+company.website)
                i.mdi.mdi-web(aria-hidden='true')
                |  Visit Website
