li.list-group-item.col-sm-4.col-md-4.col-lg-4.col-xs-4.nopadding.popular-city
   div.col-sm-12.col-lg-12.col-md-12.nopadding
      div.col-sm-12.col-lg-12.col-md-12.nopadding
         a(href="/school/search?schoolInfo=&province=#{item.code}&city=-1")
            .img-container
               .img-frame(style="background-image: url('#{pictureInfo.returnThumbnail(item.picture)}');")
         .clearfix
         if isCity
            a(href="/school/search?schoolInfo=&province=-1&city=#{item.code}")
               .city-name-panel
                  h4 #{jadefunctions.capitalize(item.pName)}
                     span.hidden-xs - #{item.cName}
                  if item.number == 1
                     p #{item.number} school
                  else
                     p #{item.number} schools
         else
            a(href="/school/search?schoolInfo=&province=#{item.code}&city=-1")
               .city-name-panel
                  h4 #{jadefunctions.capitalize(item.pName)}
                     span.hidden-xs - #{item.cName}
                  if item.number == 1
                     p #{item.number} school
                  else
                     p #{item.number} schools

      .clearfix