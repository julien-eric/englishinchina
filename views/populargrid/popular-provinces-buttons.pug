
if popularProvinces
    .row.mt-2
        .col-auto.mx-auto
            each popularProvince, index in popularProvinces

                if index < 3
                    a.text-dark.btn.btn-md.bg-pale-gray.font-weight-bold.mr-2(href='/search?province=' + popularProvince._id.code)
                        i.mdi.mdi-earth.mr-2.text-primary(aria-hidden='true')
                        | #{popularProvince._id.name}
                else if index < 6
                    a.text-dark.btn.btn-md.bg-pale-gray.font-weight-bold.d-none.d-lg-inline-block.mr-2(href='/search?province=' + popularProvince._id.code) 
                        i.mdi.mdi-earth.mr-2.text-primary(aria-hidden='true')
                        | #{popularProvince._id.name}
