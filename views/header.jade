include fcb-js-sdk
nav.navbar-fixed-top.navbar.navbar-default.navbar-custom.navbar-nosideborder
    .container
        // Brand and toggle get grouped for better mobile display
        .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.pull-left(href='/')
                img.nav-logo(src="/images/logo3.png")
            a.pull-left.hidden-xs(href='/')
                img.nav-brand(src="/images/title-xs.png")
            a.pull-left.hidden-sm.hidden-md.hidden-lg(href='/')
                img.nav-brand(src="/images/title-xs.png")
        .collapse.navbar-collapse#bs-example-navbar-collapse-1
            ul.nav.navbar-nav
                li.active
                    a(href='/')
                        | Home
                        span.sr-only (current)
                li
                    a(href='/articles')
                        | Articles
                        span.sr-only (current)
            ul.nav.navbar-nav.navbar-right
                if locals.user
                    li
                        a(href='/school/addschool')
                            span.navbar-icon.glyphicon.glyphicon-plus-sign
                            | Add School
                    li.dropdown
                        a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                            | #{user.username}
                            span.caret
                            //.profile-picture
