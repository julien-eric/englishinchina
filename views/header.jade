nav.navbar.navbar-default.navbar-custom
    .container.container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.pull-left(href='/')
                img.nav-logo(src="/images/logo2.gif")
            a(href='/')
                img.nav-brand(src="/images/logo-name2.gif")
        // Collect the nav links, forms, and other content for toggling
        .collapse.navbar-collapse#bs-example-navbar-collapse-1
            ul.nav.navbar-nav
                li.active
                    a(href='/')
                        | Home
                        span.sr-only (current)
                li
                    a(href='/')
                        | About
                        span.sr-only (current)
            ul.nav.navbar-nav.navbar-right
                if locals.user
                    li
                        a(href='/school/addschool') Add school
                    li.dropdown
                        a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                            | #{user.firstName} #{user.lastName}
                            span.caret
                        ul.dropdown-menu
                            li
                                a(href='/user') My Profile
                            li
                                a(href='/user/edit') Edit
                            li
                                a(href='#') Settings
                            li.divider(role='separator')
                            li
                                a(href='/signout') Sign Out
                    li.profile-picture
                        if locals.user.fb
                            div.img-circle(style="background-image: url('#{pictureInfo.returnFacebookPicture(user.avatarUrl)}');")
                        else
                            div.img-circle(style="background-image: url('#{pictureInfo.returnThumbnail(user.avatarUrl)}');")
                else
                    li
                        a(href='/login') Log In
                    li
                        a(href='/signup') Sign Up
