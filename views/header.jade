                            //        div.profile-img.img-circle(style="background-image: url('#{pictureInfo.returnFacebookPicture(user.avatarUrl)}');")
                            //    else
                            //        div.default-user-picture.img-circle(style="background-image: url('/images/default-user.png');")
                            //        div.profile-img.img-circle(style="background-image: url('#{pictureInfo.returnThumbnail(user.avatarUrl)}');")
                        ul.dropdown-menu
                            //li
                            //    a(href='/user') My Profile
                            li
                                a(href='/user/edit') Edit
                            li
                                a(href='#') Settings
                            li.divider(role='separator')
                            li
                                a(href='/signout') Sign Out
                    li.profile-picture.profile-picture.hidden-xs
                        if locals.user.fb && locals.user.useFacebookPic
                            div.default-user-picture.img-circle(style="background-image: url('/images/default-user.png');")
                            div.profile-img.img-circle(style="background-image: url('#{pictureInfo.returnFacebookPicture(user.avatarUrl)}');")
                        else
                            div.default-user-picture.img-circle(style="background-image: url('/images/default-user.png');")
