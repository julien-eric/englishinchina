extends layout
block content
   div.container
      div.row
         div.col-sm-8.col-md-8.col-md-offset-2.col-sm-offset-2
            h1  Review #{school.name}
            form(action='/school/insertreview', method='POST')
               .writereviewformgroup
                  h2 Contact Information
                  .clearfix
                  .user-box.col-sm-12.col-md-6
                     .user-picture
                        if user.fb
                           .default-user-picture.image-holder.img-circle(style="background-image: url('/images/default-user.png');")
                           .profile-img.image-holder.img-circle(style="background-image: url('#{pictureInfo.returnFacebookPicture(user.avatarUrl)}');")
                        else
                           .default-user-picture.image-holder.img-circle(style="background-image: url('/images/default-user.png');")
                           .profile-img.image-holder.img-circle(style="background-image: url('#{pictureInfo.returnThumbnail(user.avatarUrl)}');")
                     h2 #{user.username}
                     .clearfix
                  label.hidden.criteria.control-label.col-sm-12.col-md-12(for='nothing') 1. Review anonymously
                  label.hidden.col-sm-6.col-md-6
                     input.hidden(type="checkbox", name="anonymous")
                     | Review anonymously, your account name and picture will not be associated with this review
                  .clearfix
                  .form-group
                     label.criteria.control-label.col-sm-12.col-md-12(for='nothing') 1. Position in School
                     select.employeeInfo.col-sm-12.col-md-4#typeofemployee.form-control(name="position" required="required")
                        option(value="-1") Position in School
                        option(value="1") Teacher
                        option(value="2") Teacher's Assistant(TA)
                        option(value="3") Head Teacher
                  .form-group
                     label.criteria.control-label.col-sm-12.col-md-12(for='nothing') 2. Period of employment
                     div.col-sm-12.col-md-6.float-left
                        #datetimepicker1.calendar.input-group.date
                              input.form-control(type="text" name="dateEmployed" value="Start Date",required)
                              span.input-group-addon
                                 span.glyphicon.glyphicon-calendar
                        #datetimepicker2.calendar.input-group.date
                              input.form-control(type="text" name="dateReleased" value="End Date",required)
                              span.input-group-addon
                                 span.glyphicon.glyphicon-calendar
                     .clearfix
               h2 Evaluation Of School

               each criterium,i in criteria
                  .form-group
                     label.criteria.control-label.col-sm-12.col-md-12(for='#{criterium.label}') #{criterium.code}. #{criterium.name}
                     p.col-sm-12.col-md-9 #{criterium.description}
                     input.sliderBar(id='ex' + (i+1), name="#{criterium.label}" data-slider-id='ex'+(i+1)+'Slider' type="text" data-slider-min="0" data-slider-max="5" data-slider-step="1" data-slider-value="1")
                     span.review-criteria-score.col-sm-5.col-md-5.pull-right(id='ex'+(i+1)+'CurrentSliderValLabel') Score:
                        span(id='ex'+(i+1)+'SliderVal') 1
                        span /5

               .clearfix
               .h2 Write about your experience at #{school.name}
               .form-group
                  //label.control-label(for='Comments') Comments
                  textarea(rows='8', name='comment', class='form-control', placeholder='Type your comment here',required)
               .form-group
                  input(type="hidden" name="school" value='#{school.id}')
               button.col-sm-3.col-md-3.col-lg-3(class='btn btn-eic btn-lg btn-primary', type='submit') Submit Review
            #message
               if message
                  h1.text-center.error-message #{message}

