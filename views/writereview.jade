extends layout
block content
   div.container
      div.row
         div.col-sm-8.col-md-8.col-md-offset-2.col-sm-offset-2
            h1.text-center  #{school.name}
            h2.login-title Write A Review
            form(action='/school/insertreview', method='POST')
               .form-group
                  label.control-label(for='Comments') Comments
                  textarea(rows='8', name='comment', class='form-control', placeholder='Type your comment here',required)
               h2 Rate Each Item
               .form-group
                  label.criteria.control-label.col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3(for='cri_academicDisciplinarySupport') Academic and Disciplinary Support
                  input#ex1(name="cri_academicDisciplinarySupport" data-slider-id='ex1Slider' type="text" data-slider-min="0" data-slider-max="5" data-slider-step="1" data-slider-value="1")
               .form-group
                  label.criteria.control-label.col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3(for='cri_managementAdministration') Management And Administration
                  input#ex2(name="cri_managementAdministration" data-slider-id='ex2Slider' type="text" data-slider-min="0" data-slider-max="5" data-slider-step="1" data-slider-value="1")
               .form-group
                  label.criteria.control-label.col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3(for='cri_resourcesAvailability') Availability of Resources
                  input#ex3(name="cri_resourcesAvailability" data-slider-id='ex3Slider' type="text" data-slider-min="0" data-slider-max="5" data-slider-step="1" data-slider-value="1")
               .form-group
                  label.criteria.control-label.col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3(for='cri_accomodationProvided') Reliability of Provided Accomodation
                  input#ex4(name="cri_accomodationProvided" data-slider-id='ex4Slider' type="text" data-slider-min="0" data-slider-max="5" data-slider-step="1" data-slider-value="1")
               .form-group
                  label.criteria.control-label.col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3(for='cri_supportOnArrivalandVisa') Support On Arrival and Visa Handling
                  input#ex5(name="cri_supportOnArrivalandVisa" data-slider-id='ex5Slider' type="text" data-slider-min="0" data-slider-max="5" data-slider-step="1" data-slider-value="1")
               .form-group
                  label.criteria.control-label.col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3(for='cri_salaryVsCOLiving') Salary vs Cost Of Living
                  input#ex6(name="cri_salaryVsCOLiving" data-slider-id='ex6Slider' type="text" data-slider-min="0" data-slider-max="5" data-slider-step="1" data-slider-value="1")
               .form-group
                  label.criteria.control-label.col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3(for='cri_respectForContract') Attention given to respecting contract
                  input#ex7(name="cri_respectForContract" data-slider-id='ex7Slider' type="text" data-slider-min="0" data-slider-max="5" data-slider-step="1" data-slider-value="1")
               .form-group
                  label.criteria.control-label.col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3(for='cri_pollution') Level of pollution
                  input#ex8(name="cri_pollution" data-slider-id='ex8Slider' type="text" data-slider-min="0" data-slider-max="5" data-slider-step="1" data-slider-value="1")
               input(type="hidden" name="school" value='#{school.id}')
               button.col-sm-3.col-md-3.col-lg-3(class='btn btn-lg btn-primary', type='submit') Submit Review
            #message
               if message
                  h1.text-center.error-message #{message}

