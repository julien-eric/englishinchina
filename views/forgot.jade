extends layout
block content
    div.container
        div.login-form.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
            .login-branding
                img.signin-logo(src="/images/logo2.gif")
                .clearfix
                img.signin-brand(src="/images/logo-name3.gif")
            .panel.panel-default
                .panel-body.flat-body
                    legend Forgot Password
                    form(method='POST')
                        .form-group
                            label(for='email') Email
                            input.form-control.input-lg(type='text', name='email', autofocus)
                        button(class='btn btn-lg btn-block btn-eic btn-primary',type='submit') Reset Password