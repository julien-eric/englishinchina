block content
      .row.my-5
            .col-md-12
                  if photos.length <= 3
                        .lightbox.clearfix.no-margin
                              each photo in photos
                                          include photo-figure
                              include add-photo-figure
                  else
                        .lightbox.clearfix.no-margin
                              -var photo = photos[0]
                              include photo-figure
                              -var photo = photos[1]
                              include photo-figure
                              -var photo = photos[2]
                              include photo-figure
                              -var photo = photos[3]
                              include photo-figure
                              #collapsePhoto.clearfix.collapse(aria-labelledby='headingPhoto', data-parent='#accordion-photo')
                                    each photo,index in photos
                                          if index >= 4
                                                include photo-figure
                                    include add-photo-figure
                        #show-more.row.my-3.show-more
                              .col-12
                                    a(data-toggle='collapse', href='#collapsePhoto', role='button', aria-expanded='false', aria-controls='collapsePhoto')
                                          | Show more 
                                          i.mdi.mdi-chevron-down(aria-hidden='true')
                        #show-less.row.my-3.show-more.d-none
                              .col-12
                                    a(data-toggle='collapse', href='#collapsePhoto', role='button', aria-expanded='false', aria-controls='collapsePhoto')
                                          | Show less 
                                          i.mdi.mdi-chevron-up(aria-hidden='true')