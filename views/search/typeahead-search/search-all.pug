-var searchBoxValue = ''
if queryInfo
    -searchBoxValue = queryInfo

if fullWidthSearch
    .col-xl-12.col-lg-12.col-md-12.pr-md-0.my-3
        .input-group.mb-3
            .input-group-prepend
                i.text-primary.mdi.mdi-map-marker#basic-addon2.input-group-text(aria-hidden='true')
            input#queryInfo.bg-white.typeahead.typeahead-scrollable.form-control.search-filter.form-form-0(name="queryInfo", data-inline-search=inlineSearch, datasets="provinces cities jobs", placeholder="Province or city name", value=searchBoxValue, type="text")         
            .input-group-append#clear-search
                i.mdi.mdi-close-circle#basic-addon2.input-group-text.bg-white(aria-hidden='true')

else 
    .col-xl-9.col-lg-9.col-md-9.pr-md-0.my-3
        .form-group.search-nav-form.mt-0
                input#queryInfo.bg-white.typeahead.typeahead-scrollable.form-control.search-filter.form-form-0(name="queryInfo", data-inline-search=inlineSearch, datasets="provinces cities jobs", placeholder="Where do you want to go?", value=searchBoxValue, type="text")

    .col-xl-3.col-lg-3.col-md-3.mb-3.my-0.mt-md-3
        button.btn.btn-md.btn-primary.btn-block.my-0(type='submit') 
                span  Let's go!