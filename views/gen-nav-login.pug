if locals.user
    li.nav-item.dropdown
        a#navbarDropdownMenuLink.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
            span.caret
                | #{user.username}
        .dropdown-menu(aria-labelledby='navbarDropdownMenuLink')
            a.dropdown-item(href='/user/edit') My Profile
            if user.teachingDetails
                a.dropdown-item(href='/user/teacher-details/' + user.id ) Teacher Profile
            a.dropdown-item(href='/signout') Sign Out

    li.d-none.d-md-inherit
        if locals.user.fb && locals.user.useFacebookPic
            .user-picture
                img.rounded-circle(src=user.avatarUrl, width='40', height='40',  alt='Cinque Terre')
        else
            .user-picture
                img.rounded-circle(src=pictureInfo.returnThumbnail(user.avatarUrl), width='40', height='40', alt='Cinque Terre')
else

    li.nav-item
        a.nav-link(href='/login') 
            i.d-none.d-lg.fa.prefix.mdi.mdi-account(aria-hidden='true')
            | Login
    li.nav-item
        a.nav-link(href='/signup') 
            //- i.fa.prefix.mdi.mdi-account-plus(aria-hidden='true')
            | Register
