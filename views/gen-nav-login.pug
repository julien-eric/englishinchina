if locals.user
    li.nav-item.dropdown
        a#navbarDropdownMenuLink.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
            span.caret
                | #{user.username}
        .dropdown-menu(aria-labelledby='navbarDropdownMenuLink')
            a.dropdown-item(href='/user/edit') My Profile
            a.dropdown-item(href='/signout') Sign Out
    li.hidden-xs
        if locals.user.fb && locals.user.useFacebookPic
            .user-picture
                img.rounded-circle(src=pictureInfo.returnFacebookPicture(user.avatarUrl), width='40', height='40',  alt='Cinque Terre')
        else
            .user-picture
                img.rounded-circle(src=pictureInfo.returnThumbnail(user.avatarUrl), width='40', height='40', alt='Cinque Terre')
else
    li.nav-item
        a.nav-link(href='/login') Login
    li.nav-item
        a.nav-link(href='/signup') Sign up
