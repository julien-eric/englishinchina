doctype html
html
  head
    if title
      title #{title}
    else
      title= "English in China"
    meta(property='og:url', content='https://www.facebook.com/englishinchinaco/')
    meta(property='og:type', content='website')
    meta(property='og:title', content='English in China')
    meta(property='og:description', content='English in China catalogs every school, university and English organization in the country in a way that has never been done before. Discover schools and cities through the words of teachers who have already experienced them and find which environment better fulfills your expectations')
    meta(property='og:image', content='http://englishinchina.co/images/chinag.jpg')
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,700")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Roboto+Condensed:100,300")
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-fileinput.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/ekko-lightbox.min.css')
    link(rel='stylesheet', href='/stylesheets/horizBarChart.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-slider.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-datetimepicker.min.css')
    include analytics
    script(src="/javascripts/libs/jquery-2.1.4.min.js")
    script(src="/javascripts/libs/moment.min.js")
    script(src="/javascripts/libs/bootstrap.min.js")
    if scripts
      each js in scripts
        script(src=js)
  body
    include ./header/header.jade
    include ./header/navbar2.jade
    include flash-errors
    block content
    include ./footer.jade
    include ./modal.jade
  meta(name="viewport", content="width=device-width, initial-scale=1")

