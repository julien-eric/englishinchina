            .col-sm-12.col-md-5.col-lg-5
                h2.font-weight-light.text-light Contact Us
                form(action='/contactus', method='POST')
                    .form-group
                        input.bg-darker.text-light-secondary(type='email', name='email', class='form-control', placeholder='Email',required)
