extends ../layout
block content
    .container.login-page
        .row
            div.login-form.col-sm-8.col-md-8.col-lg-8.offset-sm-2.offset-md-2.offset-lg-2
                .panel.login-panel
                    .panel-body.flat-body
                        .row
                            h3.text-center.login-title Add Article
                            form(action='/article/add', method='POST')
                                .form-group
                                    label.control-label(for='Title') Title
                                        input(type='text', name='title', class='form-control', placeholder='Title',required, autofocus)
                                .form-group
                                    label.control-label(for='Author') Author
                                        input(type='text', name='author', class='form-control', placeholder='Author',required, autofocus)
                                .form-group
                                    label.control-label(for='Picture') Picture
                                    .progress
                                        #progress-bar-picture.progress-bar.progress-bar-success(role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;")
                                            span.sr-only 0% Complete
                                    img#preview.img-thumbnail.col-sm-12.col-md-12.col-lg-12(src="/images/default.png")
                                    input#avatarUrl(type="hidden" name="avatarUrl" accept="image/*" value="/public/default.png")
                                    span(class="btn btn-default btn-file") Browse
                                        input#file_input(type="file")
                                .form-group
                                    label.control-label(for='Content') Content
                                    textarea#description-textarea(rows='20', name='content', class='form-control', placeholder='Content', style="width: 100%", required)
                                .form-group
                                    label.control-label(for='Author') Kicker
                                        input(type='text', name='kicker', class='form-control', placeholder='Kicker',required, autofocus)
                                button(class='btn btn-lg btn-primary btn-block btn-eic', type='submit') Submit
                                    span.clearfix
