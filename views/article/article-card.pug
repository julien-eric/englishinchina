.card.text-right.h-100
    .display-grid
        a.view.overlay.card-img(href='/blog/' + article.slug)
            .image-container(style='background-image: url(' + article.featured_image + ');')             
        .card-body.text-left
            h3.font-weight-bold.card-title 
                a.text-dark(href='/blog/' + article.slug)
                    | #{article.title}
            p.text-small.font-weight-bold #{article.author.first_name} #{article.author.last_name} &middot; #{moment(article.created).format("MMMM Do")}
            hr
            p.card-text.overflow-3-lines #{article.summary}
