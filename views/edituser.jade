extends layout
block content
    div.container
        div.login-form.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
            .login-branding
                img.signin-logo(src="/images/logo2.gif")
                .clearfix
                img.signin-brand(src="/images/logo-name3.gif")
            .panel.panel-default
                .panel-body.flat-body
                    h3 Edit your profile
                    .padding
                    form(class='form-signin', action='/user/edit', method='POST')
                        .form-group
                            input#id(type="hidden", name="id", value=user.id)
                        .form-group
                            label.control-label(for='Username') Username
                            input(type='text', name='username', class='form-control', value=user.username, placeholder='Username',required, autofocus)
                        .form-group
                            label.control-label(for='Email') Email
                            input(type='email', name='email', class='form-control', value=user.email, placeholder='Email',required)
                        .form-group
                            label.control-label(for='First Name') First Name
                            input(type='text', name='firstName', class='form-control',value=user.firstName, placeholder='First Name')
                        .form-group
                            label.control-label(for='Last Name') Last Name
                            input(type='text', name='lastName', class='form-control', value=user.lastName, placeholder='Last Name')
                        .form-group
                            label.control-label(for='Picture') Picture
                            .user-picture.preview
                                if user.fb
                                    img.profile-img.register-picture.img-circle(src="/images/default-user.png")
                                    img.profile-img#preview.edit-preview.register-picture.img-circle(src="#{pictureInfo.returnFacebookPicture(user.avatarUrl)}")
                                    //.default-user-picture.register-picture.image-holder.img-circle(style="background-image: url('/images/default-user.png');")
                                    //#preview.profile-img.register-picture.image-holder.img-circle(style="background-image: url('#{pictureInfo.returnFacebookPicture(user.avatarUrl)}');")
                                else
                                    img.profile-img.register-picture.img-circle(src="/images/default-user.png")
                                    img.profile-img#preview.edit-preview.register-picture.img-circle(src="#{pictureInfo.returnThumbnail(user.avatarUrl)}")
                                    //.default-user-picture.register-pict
                                    ure.image-holder.img-circle(style="background-image: url('/images/default-user.png');")
                                    //#preview.profile-img.register-picture.image-holder.img-circle(style="background-image: url('#{pictureInfo.returnThumbnail(user.avatarUrl)}');")
                            .progress
                                #progress-bar-picture.progress-bar.progress-bar-success(role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;")
                                    span.sr-only 0% Complete
                            span(class="btn btn-default btn-file") Change Picture
                                input#file_input(type="file")
                            input#avatarUrl(type="hidden" name="avatarUrl" value=user.avatarUrl)
                        button(class='btn btn-lg btn-block btn-eic btn-primary', type='submit') Apply
                    #message
                        if message
                            h1.text-center.error-message #{message}