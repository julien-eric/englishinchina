extends layout
block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Registration Details
                div.signup-wall
                    form(class='form-signin', action='/user/edit', method='POST')
                        .form-group
                           label.control-label(for='Picture') Picture
                           #preview.img-circle.profile-image-holder(style="background-image: url('#{pictureInfo.returnThumbnail(user.avatarUrl)}');")
                           .clearfix
                           .progress
                              #progress-bar-picture.progress-bar.progress-bar-success(role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;")
                                 span.sr-only 0% Complete
                           input#avatarUrl(type="hidden" name="avatarUrl" value=pictureInfo.returnThumbnail(user.avatarUrl))
                        input#file_input(type="file")
                        .form-group
                            label.control-label(for='Username') Username
                            input(type='text', name='username', class='form-control', value=user.username, placeholder='Username',required, autofocus)
                        .form-group
                            label.control-label(for='Password') Password
                            input(type='password', name='password', class='form-control nomargin', value=user.password, placeholder='Password', required)
                        .form-group
                            label.control-label(for='Email') Email
                            input(type='email', name='email', class='form-control', value=user.email, placeholder='Email',required)
                        .form-group
                            label.control-label(for='First Name') First Name
                            input(type='text', name='firstName', class='form-control',value=user.firstName, placeholder='First Name',required)
                        .form-group
                            label.control-label(for='Last Name') Last Name
                            input(type='text', name='lastName', class='form-control', value=user.lastName, placeholder='Last Name',required)
                        button(class='btn btn-lg btn-primary', type='submit') Register
                        span.clearfix
                        a(href='/home', class='extra-link') I already have an account
                #message
                    if message
                        h1.text-center.error-message #{message}