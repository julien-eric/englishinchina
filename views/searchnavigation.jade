block content
   nav.navbar.navbar-default.navbar-custom
      // Brand and toggle get grouped for better mobile display
      .navbar-header
         button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#search-navigation', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
         h3.search-title.hidden-lg.hidden-md.hidden-sm Search
      // Collect the nav links, forms, and other content for toggling
      .collapse.navbar-collapse#search-navigation
         form.navbar-form.navbar-left(role='search', action='/school/search', method='GET')
            .form-group
               input.form-control(type='text', placeholder='School Name', name='schoolInfo',)
            .form-group
               .navbar-form.navbar-left(role='province')
                  select#provinceSelect.form-control(name="province")
                     option(value="-1") Province
                     option(value="-2") =============
                     optgroup(label="Provinces")
                        each province,i in provinces
                           option(value=province.code) #{province.name} - #{province.chineseName}
            .form-group
               .navbar-form.navbar-left(role='city')
                  select#city-select.form-control(name="city")
                     option(value="-1") City
                     //each city,i in cities
                     //   option(value=i) #{city.pyName} - #{city.cnName}
            .navbar-form.navbar-right.col-md-4.col-sm-4.col-lg-4(role='search')
               button.btn.btn-eic.btn-primary.col-md-12(type='submit') Search
.clearfix


