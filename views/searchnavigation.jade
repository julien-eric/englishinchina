block content
   div.nav-container.search-bar
      nav.navbar.navbar-default.navbar-custom.navbar-search
         .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#search-navigation', aria-expanded='false')
               span.sr-only Toggle navigation
               span.icon-bar
               span.icon-bar
               span.icon-bar
            .search-title.hidden-lg.hidden-md.hidden-sm Search
         // Collect the nav links, forms, and other content for toggling
         .collapse.navbar-collapse#search-navigation
            form.form-horizontal.navbar-form(role='search', action='/school/search', method='GET')
               .form-group
                  //label.col-md-3.col-lg-3.control-label.search-label(for='location') Name:
                  input.search-navigation-inputs.form-control(type='text', placeholder='School Name', name='schoolInfo')
               .form-group
                  //label.col-md-3.col-lg-3.control-label.search-label(for='province') Province:
                  select#provinceSelect.search-navigation-inputs.form-control(name="province")
                     option(value="-1") Province
                     option(value="-1") =============
                     optgroup(label="Provinces")
                        each province,i in provinces
                           option(value=province.code) #{province.name} - #{province.chineseName}
               .form-group
                  //label.col-md-3.col-lg-3.control-label.search-label(for='city') City:
                  select#city-select.empty.search-navigation-inputs.form-control(name="city")
                     option(value="-1") City
               .form-group
                  button.btn.btn-lg.btn-primary.btn-block(type='submit') Search
      .clearfix


